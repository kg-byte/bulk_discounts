<h1>Admin Merchants</h1> 
<%= render partial: 'partials/navbar_admin' %>
<%= link_to "Create New Merchant", "merchants/new" %> 
<h2>Top 5 Merchants:</h2>
<% @merchants.top_5_merchants.each do |merchant|%>
	<section id = "top_5-<%= merchant.id %>">
		<p><%=link_to merchant.name, "/admin/merchants/#{merchant.id}" %> , 
			Total Revenue: <%=  number_to_currency((merchant.total_revenue.to_f/100), :unit =>'$') %></p>
      <p>Top selling date for <%= merchant.name %> was <%= merchant.best_day.strftime("%A, %B, %d, %Y") %></p>
	 
  </section>
<% end %>

<br>
<h2>All Merchants</h2>

<h3> Enabled Merchants </h3>
<section class="enabled">
    <% @merchants.enabled_merchants.each do |merchant| %>
      <div class="merchant-<%=merchant.id%>">
          <p> <%= link_to  "#{merchant.name}", "/admin/merchants/#{merchant.id}" %> </p>
          <p>Status: Enabled</p>
        <p>Click this button to disable this merchant </p> <%= button_to "Disable", "/admin/merchants/#{merchant.id}", params: {status: "disabled"}, method: :patch %>
      </div>
      <% end %>
</section>

<h3> Disabled Merchants </h3>
<section class="disabled">
    <% @merchants.disabled_merchants.each do |merchant| %>
      <div class="merchant-<%=merchant.id%>"
          <p> <%= link_to  "#{merchant.name}", "/admin/merchants/#{merchant.id}" %> </p>
          <p>Status: Disabled</p>
      <p>Click this button to enable this merchant </p> <%= button_to "Enable", "/admin/merchants/#{merchant.id}", params: {status: "enabled"}, method: :patch %>
      </div>
      <% end %>
</section>


